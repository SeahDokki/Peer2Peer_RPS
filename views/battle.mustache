            <button class="choice">👊</button>
            <button class="choice">🖐</button>
            <button class="choice">✌</button>
        </div>
        <div class="results">
            <div>
                {{username}}
                <span class="score">0</span>
            </div>
            <div>
                {{opponentUsername}}
                <span class="score">0</span>
            </div>
        </div>
    </body>
