        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="text/stylesheet" href="public/style.css">
        <title>Document</title>
    </head>
    <body>
        <div id="countdown">
            {{count}}
        </div>
        <div class="message">
            {{message}}
        </div>
